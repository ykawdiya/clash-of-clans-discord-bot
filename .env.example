# Discord Bot Configuration
# Your bot token from Discord Developer Portal
DISCORD_TOKEN=your_discord_token_here
# Application Client ID
CLIENT_ID=your_bot_client_id
# For development testing in a specific server (optional)
GUILD_ID=your_discord_server_id_for_development_testing

# Clash of Clans API Configuration
# Get your API key from developer.clashofclans.com
COC_API_KEY=your_clash_of_clans_api_key_here

# Database Configuration
# Connection string for MongoDB (Atlas or self-hosted)
MONGODB_URI=mongodb+srv://username:password@host/database

# Application Settings
# Port for health check server (Railway will override this)
PORT=3000
# Environment: development or production
NODE_ENV=development

# Proxy Configuration (Optional, for API stability)
# WebShare or similar proxy service details
PROXY_HOST=your_proxy_host_here
PROXY_PORT=your_proxy_port_here
PROXY_USERNAME=your_proxy_username_here
PROXY_PASSWORD=your_proxy_password_here

# Security Settings
# 32-character encryption key for sensitive data
ENCRYPTION_KEY=your_32_character_encryption_key_here
# How often to rotate API keys (in days)
API_KEY_ROTATION_DAYS=30

# MongoDB Docker Configuration (only for docker-compose)
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=password